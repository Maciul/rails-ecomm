<div class="bg-[url('jamon_shop_store.jpeg')] bg-cover bg-no-repeat text-white text-center py-20">
  <h1 class="text-5xl font-bold drop-shadow-sm mb-4"> Little Jamon Shop </h1>
  <p class="text-xl mb-8"> You one stop shop for all your Spanish meats! </p>
</div>
<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="flex flex-col mb-4">
        <h2 class="text-gray-800 font-medium text-lg text-center mb-6"><%= category.name %></h2>
        <%= category.image.present? ? image_tag(category.image.variant(:medium), class: "max-w-lg") : image_tag("http://via.placeholder.com/512") %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="bg-gray-100 py-20 my-10">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-gray-800 mb-8">Customer Testimonials</h2>
    <div class="flex flex-wrap">
      <%= render TestimonialReviewComponent.new(customer_name: "Oliver", review: "The jamon was delivered quickly and it was even better than I expected!") %>
      <%= render TestimonialReviewComponent.new(customer_name: "Sara Lopez", review: "Their customer service was so helpful in guiding me to the perfect jamon for my needs.") %>
      <%= render TestimonialReviewComponent.new(customer_name: "Oliver", review: "Best selection of Spanish hams online, and at great prices!") %>
    </div>
  </div>
</div>
<div class="bg-gray-500 text-white my-10 text-center py-20">
  <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
  <p class="mb-8">Subscribe to our newsletter for the latest updates and offers.</p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l text-gray-800" %>
    <%= submit_tag "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
  <% end %>
</div>